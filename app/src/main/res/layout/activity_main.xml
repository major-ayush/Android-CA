<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/main"
    android:paddingBottom="40dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="678dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Microsoft Teams"
            android:textColor="@color/purple_500"
            android:textSize="30sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="200dp">

            <ImageView
                android:id="@+id/team"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/teamim" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Get started with your work,school or personal Microsoft account"
            android:textSize="18sp" />

        <EditText
            android:layout_width="290dp"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/circular_btn"
            android:backgroundTint="#E4DDDD"
            android:hint="Enter email, phone, or skype"
            android:paddingStart="20dp"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:text="Sign in"
            app:cornerRadius="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Get help with signing in"
            android:textColor="@color/purple_500" />

        <Button
            android:layout_width="320dp"
            android:layout_height="59dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:text="Join a meeting"
            android:textColor="@color/purple_500"
            app:cornerRadius="10dp"
            />

        <Button
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/microsoft"
            android:text="sign up for free             "
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            app:cornerRadius="10dp" />

    </LinearLayout>

</LinearLayout>
